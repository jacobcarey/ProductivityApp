        <ImageView
            android:id="@+id/window10"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:background="#F9DFBE"
            android:scaleType="fitXY"
            android:src="@drawable/rectangle"

            app:layout_constraintRight_toLeftOf="@+id/window11"
