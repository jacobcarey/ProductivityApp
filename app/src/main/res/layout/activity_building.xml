        <ImageView
            android:id="@+id/bolt"
            android:layout_width="329dp"
            android:layout_height="532dp"


            android:layout_marginEnd="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="8dp"
            android:background="#181C28"
            android:scaleType="fitXY"
            android:src="@drawable/bolt"
            android:tint="#FFF"
            app:layout_constraintBottom_toBottomOf="@+id/building"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/powerUp"
            app:layout_constraintVertical_bias="1.0" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="277dp"
            android:layout_height="37dp"
            android:layout_marginRight="26dp"
            android:layout_marginTop="14dp"
            android:max="100"
            android:progress="0"
            android:progressTint="#DF6467"
            app:layout_constraintRight_toRightOf="@+id/bolt"
            app:layout_constraintTop_toTopOf="@+id/bolt"
            android:layout_marginEnd="26dp" />


    </android.support.constraint.ConstraintLayout>
    </FrameLayout>



    <!-- Container for contents of drawer - use NavigationView to make configuration easier -->
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@menu/drawer_view"/>
        <!--app:headerLayout="@layout/nav_header"-->


</android.support.v4.widget.DrawerLayout>