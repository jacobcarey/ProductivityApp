            android:id="@+id/window4"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:background="#F9DFBE"
            android:src="@drawable/rectangle"

            app:layout_constraintRight_toLeftOf="@+id/window5"
            android:layout_marginRight="14dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/window1" />

        <ImageView
            android:id="@+id/window5"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:background="#F9DFBE"
            android:scaleType="fitXY"
            android:src="@drawable/rectangle"

            android:layout_marginTop="21dp"
            app:layout_constraintTop_toBottomOf="@+id/window2"
            app:layout_constraintRight_toLeftOf="@+id/window6"
            android:layout_marginRight="15dp" />


        <ImageView
            android:id="@+id/window6"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:background="#F9DFBE"
            android:scaleType="fitXY"
            android:src="@drawable/rectangle"

            android:layout_marginTop="21dp"
            app:layout_constraintTop_toBottomOf="@+id/window3"
            android:layout_marginRight="25dp"
            app:layout_constraintRight_toRightOf="@+id/building" />

        <ImageView
            android:id="@+id/window7"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:background="#F9DFBE"
            android:scaleType="fitXY"
            android:src="@drawable/rectangle"

            app:layout_constraintRight_toLeftOf="@+id/window8"
            android:layout_marginRight="14dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/window4"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/building"
            app:layout_constraintHorizontal_bias="1.0" />

        <ImageView
            android:id="@+id/window8"
            android:layout_width="70dp"
