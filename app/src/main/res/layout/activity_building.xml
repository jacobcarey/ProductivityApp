            android:scaleType="fitXY"
            android:src="@drawable/rectangle"

            app:layout_constraintRight_toLeftOf="@+id/window14"
            android:layout_marginRight="14dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/window10" />

        <ImageView
            android:id="@+id/window14"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:background="#F9DFBE"
            android:scaleType="fitXY"
            android:src="@drawable/rectangle"

            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@+id/window11"
            app:layout_constraintRight_toLeftOf="@+id/window15"
